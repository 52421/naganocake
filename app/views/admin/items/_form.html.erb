<%= form_with model:item,url: url,local: true do |f| %>
<div class="itmes form-controll">
 <div class="col-lg-4">
  <div class="prev-contents">
   <div class="col-lg-8">
    <div class="row">
    <%= f.label :商品名 %>
    <%= f.text_field :name, placeholder:"商品名" %>
    </div>
    <div class="row">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, placeholder:"商品説明" %>
    </div>
    <div class="row">
    <%= f.label :税抜価格 %>
    <%= f.number_field :price %>円
    </div>
   </div>
  </div>
 </div>
</div>
  <div class="row">
    <div class="col-lg-12">
      <%= f.submit "新規登録" ,class: 'btn btn-primary submit_item'%>
    </div>
  </div>
<% end %>