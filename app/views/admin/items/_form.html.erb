<%= form_with model:item,url: url,local: true do |f| %>
<div class="itmes form-controll">
  <div class="col-lg-4">
    <div class="prev-contents">
      <% if @item.item_image.present? %>
      <% end %>
    </div>
    <%= f.attachment_field :item_image ,class: "hidden_file"%>
  </div>
  <div class="col-lg-8">
    <div class="row">
    <%= f.label :商品名 %>
    <%= f.text_field :name, placeholder: %>
    </div>
    <div class="row">
    <%= f.label :商品説明 %>
    <%= f.text_area :introduction, placeholder: %>
    </div>
    <div class="row">
    <%= f.label :ジャンル %>
    <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>
    <div class="row">
    <%= f.label :税抜価格 %>
    <%= f.text_field :price, placeholder: %>  円
    </div>
  </div>
</div>
  <div class="row">
    <div class="col-lg-12">
      <%= f.submit "新規登録" ,class: 'btn btn-primary submit_item'%>
    </div>
  </div>
<% end %>