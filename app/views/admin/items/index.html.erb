<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2>商品一覧</h2>
    </div>
    <div class="col-sm-2 px-sm-0 text-right mb-2">
      <%= link_to new_admin_item_path, class:"btn btn--circle btn--circle-c btn--shadow" do %>
        <i class="fas fa-plus"></i>
      <% end %>
    </div>
    <div class="row">
     <div class="col-sm-10 px-sm-0 mx-auto mb-5">
      <table class="table text-center admin-items mb-5">
       <thead>
        <tr>
         <th>商品ID</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
        </tr>
       </thead>
    <% @items.each do |items| %>
     <tbody>
      <tr>
       <td class="align-middle"><%= item.id %></td>
       <td class="align-middle"><%= link_to admin_item_path(items.id) do %>
        <u><%= items.name %></u>
       </td>
        <td class="align-middle"><%= item.price %></td>
        <td class="align-middle"><%= item.genres.name %></td>
        <td class="align-middle"></td>
       </tr>
      </tbody>
    <% end %>
     </table>
      <%= paginate @items %>
    </div>
  </div>
 </div>
</div>