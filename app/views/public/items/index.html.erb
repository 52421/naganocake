<div class="row login-row">
 <div class="col-xs-9">
  <h2><%= "#{@index}商品一覧 （全#{@items.count}件）" %></h2>
   <div class="d-flex align-items-center flex-wrap">
        <div>
          <% @items.each do |item| %>
              <%= link_to item_path(item) do %>
               <%= image_tag item.image, size: "150x150" %>
              <% end %>
               <%= item.name %>
              ¥<%= item.with_tax_price.to_s(:delimited) %>
          <% end %>
        </div>
      </div>
      <%= paginate @items %>
    </div>
  </div>
  