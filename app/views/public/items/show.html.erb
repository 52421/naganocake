<% provide(:title, "商品詳細") %>
<% if flash[:notice] %>
	<div class="alert alert-info text-center">
			<%= flash[:notice] %>
	</div>
<% end %>
<div class="container">
 <div class="col-lg-5">
  <%= image_tag @item.image, size: "200x200" %>
 </div>
 <div class="col-lg-5">
  <h1 class="pull-left" style="font-weight: bold; margin-top:100px;"><%= @item.name %></h1>
 </div>
<div class="col-lg-5">
 <p class="pull-left"><%= @item.introduction %></p>
</div>
<div class="col-lg-5">
 <p class="pull-left"><strong>¥ <%= (@item.price) %></strong>(税込)</p>
</div>

<%= form_with model: @cart_item, url: cart_items_path(@item), method: :post, local: true do |f| %>
  <%= f.label :amount, "個数選択" %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.select :amount, *[1..10] %>
  <%= f.submit "カートに入れる", class: "btn btn-primary" %>
<% end %>
</div>
