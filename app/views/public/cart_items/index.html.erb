<% provide(:title, "カート") %>
<div class="container">
	<div class="row">
		<div class="col-lg-4">
		<h3>ショッピングカート</h3>
		</div>
		<div class="col-lg-4">
		</div>
		<div class="col-lg-4">
			<% if @cart_items.present? == true %>
				<%= link_to 'カートを空にする',  destroy_cart_items_path, method: :delete, class: 'btn btn-danger'%>
			<% end %>
		</div>
	</div>
	<div class="row">
	 <div class="col-lg-10 col-xs-offset-1">
	  <table>
       <thead>
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
       </thead>
     <tbody>
     	
  <% @cart_items.each do |cart_item| %>
    <tr>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.subtotal %></td>
        <% @合計金額 += cart_item.subtotal %>
    </tr>
  <% end %>
  </tbody>
</table>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-4">
			<%= link_to '買い物を続ける', root_path, class: 'btn btn-primary' %>
		</div>
    <table class="table table-bordere">
	 <tr>
	  <th>合計金額</th>
	  <td><%= @sum %></td>
     </tr>
    </table>
	<% if @cart_items.present? == true %>
		<%= link_to  orders_new_path ,class: 'btn btn-success btn-lg' do %>
			<p style= "margin: 0; padding: 10px 50px">情報入力へ進む</p>
		<% end %>
	<% end %>
	</div>
</div>