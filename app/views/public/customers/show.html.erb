<div class="container my-5">
  <div class="row">
    <div class="offset-1">
      <h2 class="red-border px-3 pb-1">マイページ</h2>
    </div>
  </div>
　
　<h3>
		登録情報
		<%= link_to "編集する", customers_information_edit_path, class: "btn btn-success m10" %>
		<%= link_to "パスワードを変更する", edit_customer_registration_path, class: "btn btn-success ml0" %>
	</h3>
	
  <div class="row">
	  <div class="col">
	    <table class="table table-borderless table-hover">
	      <tr class="brown-border">
		    	<td>氏名</td>
		    	<td>
		    		<%= @customer.last_name %>
		    		<%= @customer.first_name %>
		    	</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>フリガナ</td>
		    	<td>
		    		<%= @customer.last_name_kana %>
		    		<%= @customer.first_name_kana %>
	    		</td>
	      </tr>

	      <tr class="brown-border">
		    	<td>郵便番号</td>
		    	<td><%= @customer.postal_code %></td>
	      </tr>

	      <tr class="brown-border">
		    	<td>住所</td>
		    	<td><%= @customer.address %></td>
        </tr>
        
        <tr class="brown-border">
		    	<td>電話番号</td>
		    	<td><%= @customer.telephone_number %></td>
	      </tr>

	      <tr class="brown-border">
	    		<td>メールアドレス</td>
